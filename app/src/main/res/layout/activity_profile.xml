<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    tools:ignore="HardcodedText"
    android:background="#F3F2F8">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbarProfile"
        android:background="@color/teal_200"
        app:layout_constraintTop_toTopOf="parent" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/avatar"
        android:layout_centerInParent="true"
        app:layout_constraintTop_toBottomOf="@id/toolbarProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/defaultUserName"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/InfoLayout1"
        android:layout_width="330dp"
        android:layout_height="185dp"
        app:layout_constraintTop_toBottomOf="@id/userName"
        android:layout_marginTop="25dp"
        android:background="@drawable/edit_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/personInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" 个人信息"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:drawableStartCompat="@drawable/ic_username"
            app:drawableEndCompat="@drawable/arrow_right" />
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/textview_height_of_profileP"
            android:text="姓名："
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/personInfo"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/USERNAME"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/textview_height_of_profileP"
            android:text="@string/unknown_value"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/name"
            app:layout_constraintBaseline_toBaselineOf="@id/name"/>

        <TextView
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/textview_height_of_profileP"
            android:text="性别："
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/name"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/GENDER"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/textview_height_of_profileP"
            android:text="@string/unknown_value"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/gender"
            app:layout_constraintBaseline_toBaselineOf="@id/gender"/>

        <TextView
            android:id="@+id/age"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/textview_height_of_profileP"
            android:text="年龄："
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/gender"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/AGE"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/textview_height_of_profileP"
            android:text="@string/unknown_value"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/age"
            app:layout_constraintBaseline_toBaselineOf="@id/age"/>

        <TextView
            android:id="@+id/contact"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/textview_height_of_profileP"
            android:text="联系方式："
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/age"
            app:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:id="@+id/CONTACT"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/textview_height_of_profileP"
            android:text="@string/unknown_value"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/contact"
            app:layout_constraintBaseline_toBaselineOf="@id/contact"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="330dp"
        android:layout_height="210dp"
        app:layout_constraintTop_toBottomOf="@id/InfoLayout1"
        android:layout_marginTop="25dp"
        android:background="@drawable/edit_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/RehabInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 医疗信息"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:drawableStartCompat="@drawable/ic_rehabinfo" />
        <TextView
            android:id="@+id/diagnosisInfo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/textview_height_of_profile"
            android:text="诊断信息"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/RehabInfo"
            app:layout_constraintStart_toStartOf="parent"
            app:drawableEndCompat="@drawable/arrow_right"/>
        <!-- 灰色分割线 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginStart="15dp"
            android:layout_marginTop="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/diagnosisInfo"/>
        <TextView
            android:id="@+id/plan"
            android:layout_width="match_parent"
            android:layout_height="@dimen/textview_height_of_profile"
            android:text="治疗方案"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/diagnosisInfo"
            app:layout_constraintStart_toStartOf="parent"
            app:drawableEndCompat="@drawable/arrow_right"/>
        <!-- 灰色分割线 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginStart="15dp"
            android:layout_marginTop="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/plan"/>
        <TextView
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="@dimen/textview_height_of_profile"
            android:text="进展记录"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/plan"
            app:layout_constraintStart_toStartOf="parent"
            app:drawableEndCompat="@drawable/arrow_right"/>
        <!-- 灰色分割线 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginStart="15dp"
            android:layout_marginTop="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/progress"/>
        <TextView
            android:id="@+id/goals"
            android:layout_width="match_parent"
            android:layout_height="@dimen/textview_height_of_profile"
            android:text="我的目标"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/progress"
            app:layout_constraintStart_toStartOf="parent"
            app:drawableEndCompat="@drawable/arrow_right"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>