<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    tools:ignore="HardcodedText">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@drawable/logo_transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />
    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/logo"
        android:text="@string/poem"
        android:typeface="sans"
        android:textSize="20sp"
        app:flow_horizontalBias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
        android:id="@+id/accountEdit"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/半透明"
        android:drawableStart="@drawable/ic_username"
        android:drawablePadding="10dp"
        android:hint="用户名"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/appName"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:autofillHints="username" />
    <EditText
        android:id="@+id/pswEdit"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/半透明"
        android:drawableStart="@drawable/ic_password"
        android:drawablePadding="10dp"
        android:hint="密码"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/accountEdit"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:autofillHints="password" />
    <LinearLayout
        android:id="@+id/RememberLayout"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/pswEdit">
        <CheckBox
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:id="@+id/rememberPsw" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="记住密码"/>
    </LinearLayout>
    <Button
        style="@style/common_button1"
        android:id="@+id/newUserBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册"
        android:layout_marginStart="50dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintEnd_toEndOf="@id/loginInBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/RememberLayout" />
    <Button
        style="@style/common_button2"
        android:id="@+id/loginInBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/newUserBtn"
        app:layout_constraintTop_toBottomOf="@id/RememberLayout"
        android:layout_marginTop="25dp"/>
    <TextView
        android:id="@+id/skipLoginEnter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跳过登录，直接进入"
        android:textColor="#808080"
        android:background="@drawable/text_underline"
        app:layout_constraintTop_toBottomOf="@id/loginInBtn"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="140dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Introduction"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>