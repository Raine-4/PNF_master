    <style name="common_button2">
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">@dimen/sp14</item>
        <item name="android:background">@drawable/bg_ripple_common_button2</item>
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:layout_width">@dimen/dp_100</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.PNF_Master" parent="Base.Theme.PNF_Master" />

    <style name="PopupMenuStyle" parent="@style/Widget.AppCompat.PopupMenu">
        <!-- 设置垂直方向的偏移量 -->
        <item name="android:dropDownVerticalOffset">100dp</item>
    </style>


    <dimen name="sp14">14sp</dimen>
    <dimen name="sp16">16sp</dimen>
    <dimen name="dp_60">60dp</dimen>
    <dimen name="dp_100">100dp</dimen>
    <dimen name="dp_50">50dp</dimen>
    <dimen name="textview_height_of_profileP">30dp</dimen>
    <dimen name="textview_height_of_profile">35dp</dimen>
</resources>